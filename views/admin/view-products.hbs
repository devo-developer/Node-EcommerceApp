<section>
  <div class="container">
    <div class="row">
      <a href="/admin/add-product" class="btn btn-success ml-auto mt-3">Add
        Product</a>
    </div>
    <table class="table mt-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img
                style="width:50px; height:50px"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
            <td>
              <nav>
                <ul class="pagination justify-content-center">
                  <li>
                    <a href="#profile"><i
                        class="fas fa-eye dev-action p-2"
                      ></i></a>
                  </li>
                  <li>
                    <a href="/admin/edit-product/{{this._id}}"><i
                        class="fas fa-pen dev-action p-2 text-success"
                      ></i></a>
                  </li>
                  <li>
                    <a
                      href="/admin/delete-product/{{this._id}}"
                      onclick="return confirm('Are you want to delete {{this.name}}')"
                    ><i
                        class="fas fa-trash-alt dev-action p-2 text-danger"
                      ></i></a>
                    {{!-- second method to pass values--
                    <a href="/admin/delete-product?id={{this._id}}&name={{this.name}}"><i
                        class="fas fa-trash-alt dev-action p-2 text-danger"
                      ></i></a> --}}
                  </li>
                </ul>
              </nav>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>